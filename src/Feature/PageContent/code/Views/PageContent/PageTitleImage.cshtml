@using Sitecore.Mvc.Presentation
@using WageWorks.Feature.PageContent
@using WageWorks.Foundation.Alerts
@using WageWorks.Foundation.Alerts.Extensions
@using WageWorks.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel

@if (!Model?.Item?.IsDerived(Templates.HasPageContent.ID) ?? true)
{
    @Html.PageEditorError(AlertTexts.InvalidDataSourceTemplate(Templates.HasPageContent.ID), AlertTexts.InvalidDataSourceTemplateFriendlyMessage, Model.Item?.ID, Model.Rendering.Item?.ID)
    return;
}

<section class="teaser-article @RenderingContext.Current.Rendering.Parameters.GetCssClassFromParameters()">
    <div class="teaser-article__background" style="background-image: @Model.Item.ImageUrl(Templates.HasPageContent.Fields.Image).ToCssUrlValue();"></div>
    <div class="teaser-article__content-wrapper">
        <div class="teaser-article__content teaser-article__content--landing">
            <h2>
                @Html.Sitecore().Field(Templates.HasPageContent.Fields.Title, Model.Item)
            </h2>
            @if (Model.Item.FieldHasValue(Templates.HasPageContent.Fields.Summary) || Sitecore.Context.PageMode.IsExperienceEditor)
            {
                <div class="teaser-article__copy">@Html.Sitecore().Field(Templates.HasPageContent.Fields.Summary, Model.Item)</div>
            }
        </div>
    </div>
</section>