@using Wageworks.Feature.PageContent
@using Wageworks.Foundation.Alerts
@using Wageworks.Foundation.Alerts.Extensions
@using Wageworks.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@if (!Model?.Item?.IsDerived(Templates.HasPageContent.ID) ?? true)
{
  @Html.PageEditorError(AlertTexts.InvalidDataSourceTemplate(Templates.HasPageContent.ID), AlertTexts.InvalidDataSourceTemplateFriendlyMessage, Model.Item?.ID, Model.Rendering.Item?.ID)
  return;
}

@if (!Sitecore.Context.PageMode.IsExperienceEditor && !Html.Sitecore().HasValue(Templates.HasPageContent.Fields.Body.ToString()))
{
  return;
}

<div class="m-b-2 container page-body">
  @Html.Sitecore().Field(Templates.HasPageContent.Fields.Body)
</div>